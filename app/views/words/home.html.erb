<div class = "container text-center" style="padding-top: 150px; align-items:center">
    <div class = "card-title"><h1 style="color: #007bff;">Diccionario</h1></div>
<hr/>
    <div class="cards">
      <div class = "card-body">
        <p >Búsqueda de palabras.</p>
        <div class="form-group">
          <%= form_tag('/words', method: :get) do %>
          <div class="row justify-content-center">
            <div class="col-sm-6 col-lg-offset-6">
              <%= text_field_tag :name,params[:name], placeholder: 'Haga una búsqueda aquí...',class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class="fas fa-search"></i> Buscar
        <%end%>
      </div>
  </div>
  <footer><%= link_to 'Agregar nueva palabra', new_word_path %></footer>
</div>
<%end%>
